# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored to prevent committing secrets

# General
project_name = "cloudmetrics"
environment  = "dev"
aws_region   = "us-east-1"

# VPC
vpc_cidr = "10.0.0.0/16"

# EC2
ec2_instance_type = "t3.micro"
key_name          = null  # Optional: set to your SSH key pair name for SSH access
app_port          = 3001

# RDS
rds_instance_class    = "db.t3.micro"
rds_allocated_storage = 20
db_name               = "cloudmetrics"
db_username           = "cloudmetrics_admin"
db_password           = "your-secure-password-here"  # Change this!

# ElastiCache
redis_node_type = "cache.t3.micro"

# Auto Scaling
asg_min_size         = 1
asg_max_size         = 2
asg_desired_capacity = 1
